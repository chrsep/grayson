// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String
  name     String  @default("")
  stores   Store[]
}

model Store {
  id          String    @id @default(cuid())
  name        String    @default("")
  description String    @default("")
  user        User[]
  products    Product[]
}

model Product {
  id          String @id @default(cuid())
  name        String @default("")
  description String @default("")
  tags        Tag[]

  Store   Store  @relation(fields: [storeId], references: [id])
  storeId String
}

model Tag {
  slug     String    @id
  name     String    @default("")
  products Product[]
}

model Session {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  expires_at DateTime
}
